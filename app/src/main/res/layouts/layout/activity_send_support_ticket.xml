<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layoutDirection="rtl">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"

        app:theme="@style/ToolbarStyle.Primary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recSupportChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="?attr/actionBarSize">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_above="@id/recSupportChat"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="@dimen/_2dp"
            app:srcCompat="@color/colorGrayLight"/>
        <LinearLayout
            android:layout_width="@dimen/_42dp"
            android:layout_height="@dimen/_42dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/background_circle"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgSend"
                android:layout_width="@dimen/_36dp"
                android:layout_height="@dimen/_36dp"
                android:padding="@dimen/_4dp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_send_white_24dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/_hint_message"
            android:maxLines="@integer/five"
            android:minLines="1"
            android:paddingStart="@dimen/_64dp" />

    </RelativeLayout>

</RelativeLayout>