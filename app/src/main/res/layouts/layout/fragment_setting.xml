<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_36dp"
        android:orientation="vertical"
        android:padding="@dimen/_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="7">

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/background_circle"
                android:padding="@dimen/padding_8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_dialog_alert"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txtNotification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_weight="6"
                android:gravity="right|center_vertical"
                android:text="دریافت اعلان ها" />

            <Button
                android:id="@+id/btnNotification"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/m_icon_left_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="7">

            <ImageView
                android:id="@+id/imgTheme"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/background_circle"
                android:padding="@dimen/padding_8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_view"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txtTheme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_weight="6"
                android:gravity="right|center_vertical"
                android:text="تم برنامه" />

            <Button
                android:id="@+id/btnTheme"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/m_icon_left_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="7">

            <ImageView
                android:id="@+id/imgLanguage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/background_circle"
                android:padding="@dimen/padding_8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txtLanguage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_weight="6"
                android:gravity="right|center_vertical"
                android:text="زبان برنامه" />

            <Button
                android:id="@+id/btnLanguage"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/m_icon_left_arrow" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#00ffffff"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogout"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit_the_app" />

    </LinearLayout>

</LinearLayout>

