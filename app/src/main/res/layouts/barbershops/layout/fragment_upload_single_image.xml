<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_196dp"
        android:layout_below="@id/spnNumberOfViews"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_8dp"
        android:contextClickable="true"
        android:elevation="@dimen/_2dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/banner_image_placeholder" />

    <Button
        android:id="@+id/btnUpload"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/_128dp"
        android:layout_height="@dimen/_56dp"
        android:layout_below="@id/imgImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16dp"
        android:clickable="true"
        android:text="@string/request_advertise" />
</RelativeLayout>