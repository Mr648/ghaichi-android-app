<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnNumberOfViews"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:nextFocusLeft="@id/btnNumberOfViews"
        android:nextFocusUp="@id/btnNumberOfViews"
        android:text="@string/_lbl_select_pricing" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNumberOfViews"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_8dp"
        android:hint="@string/description">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lines="1"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRequest"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/_128dp"
        android:layout_height="@dimen/_56dp"
        android:layout_below="@id/inputLayoutDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/request_advertise" />
</RelativeLayout>