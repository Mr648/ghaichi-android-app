<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_196dp"
    android:layout_margin="@dimen/_8dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_144dp"
            android:layout_alignParentTop="true"
            android:src="@color/colorOrange" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgSetSelected"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:layout_marginStart="@dimen/_8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_star_border_white_24dp"
                    android:tint="@color/colorGrayAccent700" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgSetVisible"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:layout_marginStart="@dimen/_8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_visible_white_24dp"
                    android:tint="@color/colorGrayAccent700" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:layout_marginStart="@dimen/_8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:tint="@color/colorGrayAccent700" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
