<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_16dp"
            android:gravity="start"

            android:text="استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ....استفاده از قیچی برای ماه اول رایگان است و ...." />

        <LinearLayout
            android:id="@+id/checks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                app:cardCornerRadius="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/radio1Month"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_56dp"
                        android:layout_weight="1"
                        android:text="اشتراک 1 ماهه"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_18sp" />

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="اشتراک 1 ماهه قیچی با تمام امکانات 20,000 تومان" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                app:cardCornerRadius="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/radio3Month"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_56dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="اشتراک 3 ماهه"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="اشتراک 3 ماهه قیچی با تمام امکانات 50,000 تومان" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                app:cardCornerRadius="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/radio6Month"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_56dp"

                        android:layout_weight="1"
                        android:text="اشتراک 6 ماهه"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_18sp" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="اشتراک 6 ماهه قیچی با تمام امکانات 100,000 تومان" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                app:cardCornerRadius="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/radio12Month"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_56dp"

                        android:layout_weight="1"
                        android:text="اشتراک 1 ساله"
                        android:textDirection="rtl"
                        android:textSize="@dimen/_18sp" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_marginStart="@dimen/_16dp"
                        android:gravity="right"
                        android:text="اشتراک 1 ساله قیچی با تمام امکانات 200,000 تومان" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/btnPay"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56dp"
            android:layout_below="@id/checks"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_56dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:clickable="true"
            android:text="@string/account_activation_payment" />
    </RelativeLayout>

</ScrollView>