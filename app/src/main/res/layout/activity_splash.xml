<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/_256dp"
        android:layout_height="@dimen/_256dp"
        android:minHeight="@dimen/_144dp"
        android:minWidth="@dimen/_144dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_high_quality" />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_64dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/_16dp"
        android:text="Ghaichi Application" />
</LinearLayout>