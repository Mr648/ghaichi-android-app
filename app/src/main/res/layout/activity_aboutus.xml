<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/_2dp"
            app:theme="@style/ToolbarStyle.Primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="172dp"
                    android:layout_height="172dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icbg_twitter" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textSize="@dimen/text_32sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:text="@string/aboutus"
                android:textSize="20sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--<ImageView-->
                <!--android:id="@+id/imgInstagram"-->
                <!--android:layout_width="64dp"-->
                <!--android:layout_height="64dp"-->
                <!--android:layout_weight="1"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_instagram" />-->

                <!--<ImageView-->
                <!--android:id="@+id/imgTwitter"-->
                <!--android:layout_width="64dp"-->
                <!--android:layout_height="64dp"-->
                <!--android:layout_weight="1"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_twitter" />-->

                <!--<ImageView-->
                <!--android:id="@+id/imgLinkedIn"-->
                <!--android:layout_width="64dp"-->
                <!--android:layout_height="64dp"-->
                <!--android:layout_weight="1"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/ic_linkedin" />-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtInstagram"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/icbg_instagram"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/social_icon_instagram"
                        android:textColor="@color/white"
                        android:textSize="@dimen/social_icon_size" />
                </LinearLayout>

                <!--android:textColor="@color/ic_instagram"-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTwitter"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/icbg_twitter"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/social_icon_twitter"
                        android:textColor="@color/white"
                        android:textSize="@dimen/social_icon_size" />
                    <!--android:textColor="@color/ic_twitter"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtLinkedIn"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/icbg_linkedin"
                        android:gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter"
                        android:text="@string/social_icon_linkedin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/social_icon_size" />
                    <!--android:textColor="@color/ic_linkedin"-->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>

