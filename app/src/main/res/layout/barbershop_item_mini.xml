<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/_4dp"
    app:contentPadding="@dimen/_8dp">


    <RelativeLayout
        android:layout_width="@dimen/_96dp"
        android:layout_height="@dimen/_120dp">

        <TextView
            android:id="@+id/txtProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="@color/textColorDarker" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/_86dp"
            android:layout_height="@dimen/_86dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/btn_star" />
    </RelativeLayout>
</android.support.v7.widget.CardView>