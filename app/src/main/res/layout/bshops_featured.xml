<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_96dp"
    android:layout_height="@dimen/_96dp"
    android:layout_margin="@dimen/margin_4dp"
    android:orientation="vertical">

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shmImg"
        android:layout_width="@dimen/_64dp"
        android:layout_height="@dimen/_64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/_8dp"
        app:shimmer_animation_duration="1200">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/preview_small"
            app:civ_border_color="@color/colorPrimary"

            app:civ_border_width="@dimen/_2dp" />
    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shmImg"
        android:layout_marginTop="@dimen/_8dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/text_12sp" />
    </io.supercharge.shimmerlayout.ShimmerLayout>


</RelativeLayout>