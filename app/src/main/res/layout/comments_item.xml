<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4dp"
    android:layout_weight="6"
    android:gravity="center_vertical"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:padding="@dimen/_16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_circle_white_24dp"
            app:civ_border_color="@color/colorGrayDarker"
            app:civ_circle_background_color="@color/colorGray"
            app:civ_border_width="1dp"
            />

        <TextView
            android:id="@+id/txtName"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_toEndOf="@id/imgProfile"
            android:gravity="center"
            android:text="محمد کریمی"
            android:textColor="@color/colorGrayDarker" />

        <TextView
            android:id="@+id/txtMessage"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_marginTop="@dimen/_16dp"
            android:text="نظر تستی، به نظر خوب است بود خواهد شد.نظر تستی، به نظر خوب است بود خواهد شد.نظر تستی، به نظر خوب است بود خواهد شد.نظر تستی، به نظر خوب است بود خواهد شد.نظر تستی، به نظر خوب است بود خواهد شد.نظر تستی، به نظر خوب است بود خواهد شد."
            android:textColor="@color/colorGrayDark" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:isIndicator="true"
            android:layoutDirection="rtl"
            android:max="5"
            android:rating="3.5" />

        <TextView
            android:id="@+id/txtDate"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="@dimen/_12dp"
            android:gravity="center"
            android:text="97/12/13"
            android:textColor="@color/colorGrayDarker" />
    </RelativeLayout>

</android.support.v7.widget.CardView>