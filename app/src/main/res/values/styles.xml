<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorGrayDark</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorWhite</item>

    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/add_service_spinner_background</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarStyle.Transparent" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle.White" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorGrayLighter</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle.Primary" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.RatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/ratingbarNormal</item>
        <item name="colorControlActivated">@color/colorGold</item>
    </style>


    <style name="AppTheme.WhiteTextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.FontIcon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.DialogIcon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="AppTheme.Dropdown" parent="Widget.AppCompat.Spinner">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_rect</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="AppTheme.DialogButton" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.DialogButton.Bold" parent="AppTheme.DialogButton">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SorinaDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorPrimaryDarkRipple</item>
        <item name="android:tint">#fff</item>
    </style>
</resources>
