<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.WhiteTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.FontIcon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="AppTheme.DialogIcon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_rect</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="AppTheme.Dropdown" parent="Widget.AppCompat.Spinner">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_rect</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:radius">2dp</item>
    </style>


    <style name="SorinaDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/textColor</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
